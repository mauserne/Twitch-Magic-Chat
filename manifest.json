{
  "name": "Twitch chat rapid copier",
  "description": "트위치 채팅 원클릭 복사",
  "version": "1.0",
  "manifest_version": 3,
  "host_permissions": ["https://www.twitch.tv/*"],
  "background": {
    "matches": ["https://www.twitch.tv/*"],
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["https://*.twitch.tv/*"],
    "exclude_globs": ["https://www.twitch.tv/directory/*",
      "https://www.twitch.tv/p/*",
      "https://www.twitch.tv/products/*",
      "https://www.twitch.tv/*/manager*",
      "https://www.twitch.tv/*/dashboard",
      "https://www.twitch.tv/broadcast",
      "https://www.twitch.tv/messages/*",
      "https://www.twitch.tv/settings"],
      "js": ["content-script.js"],
    "run_at": "document_end"
  }],
  "web_accessible_resources": [{
    "resources": ["script.js"],
    "matches": ["*://*.twitch.tv/*"]
  }],
  "permissions": ["tabs", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/get_started16.png",
      "32": "/images/get_started32.png",
      "48": "/images/get_started48.png",
      "128": "/images/get_started128.png"
    }
  },
  "icons": {
    "16": "/images/get_started16.png",
    "32": "/images/get_started32.png",
    "48": "/images/get_started48.png",
    "128": "/images/get_started128.png"
  },
  "options_page": "options.html"
}
